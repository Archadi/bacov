<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col col-sm-4">
            <div class="card text-center">
                <div class="card-body">
                    <div>
                        <h4 class="display">Bacov</h4>
                    </div>
                    <form class="form" action="" method="POST">
                        <div class="form-group">
                            <input type="email" class="form-control" name="emailAddress" aria-describedby="emailHelp" placeholder="Adresse email">
                            <small id="emailHelp" class="form-text text-muted"></small>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" placeholder="Mot de passe">
                        </div>
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" name="remember_me" placeholder="Mot de passe">
                            <label class="form-check-label" for="remember_me">Se souvenir</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Se connecter</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    <a href="/register">S'inscrire</a>
                </div>
            </div>
        </div>
    </div>
</div>